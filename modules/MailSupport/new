function new_mail() {
  UUID=$(uuidgen)
  if [[ ! -e "$DRAFTS_PATH" ]]; then
    mkdirFolder "$DRAFTS_PATH"
  fi
  touch "$DRAFTS_PATH/$UUID.drafts"
  echo $UUID
  CURRENT_MAIL_UUID="$UUID"
}
