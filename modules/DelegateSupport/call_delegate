declare -f will_launch
declare -f did_launch
declare -f will_exec
declare -f did_exec
declare -f did_end
declare -f did_terminate

function will_launch() {
  if [[ $(function_exists builder_will_launch) == 0 ]]; then
    dir_path=$(dirname "$DELEGATE")
    switch_dir_to "$dir_path"
    builder_will_launch $@
    restore_dir
  fi
}

function did_launch() {
  if [[ $(function_exists builder_did_launch) == 0 ]]; then
    dir_path=$(dirname "$DELEGATE")
    switch_dir_to "$dir_path"
    builder_did_launch $@
    restore_dir
  fi
}

function will_exec() {
  if [[ $(function_exists builder_will_exec) == 0 ]]; then
    dir_path=$(dirname "$DELEGATE")
    switch_dir_to "$dir_path"
    builder_will_exec $@
    restore_dir
  fi
}

function did_exec() {
  if [[ $(function_exists builder_did_exec) == 0 ]]; then
    dir_path=$(dirname "$DELEGATE")
    switch_dir_to "$dir_path"
    builder_did_exec $@
    restore_dir
  fi
}

function did_end() {
  if [[ $(function_exists builder_did_end) == 0 ]]; then
    dir_path=$(dirname "$DELEGATE")
    switch_dir_to "$dir_path"
    builder_did_end $@
    restore_dir
  fi
  clean built tmp
}

function did_terminate(){
  if [[ $(function_exists builder_did_terminate) == 0 ]]; then
    dir_path=$(dirname "$DELEGATE")
    switch_dir_to "$dir_path"
    builder_did_terminate $@
    restore_dir
  fi
  clean built tmp
}
