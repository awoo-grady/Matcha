#!/bin/bash
#
# update/main
#
# Matcha 1.0, Created by gradyzhuo, enoch_lee.
# Copyright Â© 2017, Matcha Inc. All rights reserved.
#

@import Git

declare TAG="1.0"
declare UPDATE_PATH="$INSTALL_LIB_TARGET/update"
mkdirFolder "$UPDATE_PATH"

clone -r "https://github.com/gradyzhuo/Matcha.git" -b "unstable" -t "$UPDATE_PATH" -tag "$TAG"

cd "$UPDATE_PATH" >> /dev/null
sh "install.sh"
cd - >> /dev/null

delete "$UPDATE_PATH"
